<%if can? :update, @post%>
  <p id="notice"><%= notice %></p>

  <h1>Lista de posts</h1>

  <table class="table">
    <thead>
      <tr>      
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= truncate(post.content, lenght: 100) %></td>     
          <td><%= button_to "Mostrar", post, :method => :get, class: "btn btn-primary btn-xs" %></td>
          <td><%= button_to "Editar", edit_post_path(post), :method => :get, class: "btn btn-warning btn-xs"%></td>
          <td><%= button_to "Excluir", post, method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'VocÃª tem certeza?' } %></td>            
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= button_to "Novo post", new_post_path, :method => :get, class: "btn btn-primary btn-xs" %>
<%end%>
