<div id="comments">
  <%= render 'posts/post', post: @post%>

  <%if user_signed_in?%>
    <h3 class="bg-success">Enviar um comentário</h3>
    <%= render "comments/form" %>
  <%else%>
    <p class="text-muted">Faça login para fazer um comentário</p>
  <%end%>

  <h3 class="bg-success">Comentários</h3>
  <%= render @comments%>
<div>
<%= will_paginate @comments, renderer: BootstrapPagination::Rails, :previous_label => 'anterior', :next_label => 'proxima'%>


