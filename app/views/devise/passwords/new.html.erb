<h2>Esqueceu sua senha?</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  
  <%if devise_error_messages!.empty? == false %>
    <div class="alert alert-danger"><%= devise_error_messages! %> </div>
  <%end%>

  <%= f.email_field :email, autofocus: true %>

  <%= f.submit "Enviar instruções por email", class: "btn btn-primary"%>
  
<% end %>

<%= render "devise/shared/links" %>
