<h2>Trocar sua Senha</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  
  <%if devise_error_messages!.empty? == false %>
    <div class="alert alert-danger"><%= devise_error_messages! %> </div>
  <%end%>
  <%= f.hidden_field :reset_password_token %>

    <% if @minimum_password_length %>
      <em>Mínimo de (<%= @minimum_password_length %>) caracteres</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, label: "Nova Senha",autocomplete: "off" %>
  
  <%= f.password_field :password_confirmation, label: "Confirmação da senha",autocomplete: "off"%>

  <%= f.submit "Trocar minha senha", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
