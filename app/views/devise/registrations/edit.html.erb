<h2>Editar Usuário</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%if devise_error_messages!.empty? == false %>
    <div class="alert alert-danger"><%= devise_error_messages! %> </div>
  <%end%>
    
  <%= f.email_field :email, autofocus: true %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.password_field :password, autocomplete: "off",label: "Senha" , help: "(Deixe em branco caso nao queira trocar a senha)"%>

  <%= f.password_field :password_confirmation, label: "Confirmação da senha",autocomplete: "off"%>
    
  <%= f.password_field :current_password, label: "Senha atual" ,autocomplete: "off", help: "(Precisamos da sua senha atual para confirmar as alteração)"%>

  <%= f.submit "Salvar", class: "btn btn-primary" %>

<% end %>

<h3>Cancelar minha conta</h3>

  <p class="text-danger">Não está feliz? 
    <%= button_to "Cancelar minha conta", registration_path(resource_name), class: "btn btn-danger",data: { confirm: "Você tem certeza?" }, method: :delete%>
  </p>
  <%= link_to "Voltar", :back %>
