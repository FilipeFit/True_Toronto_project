<%= bootstrap_form_for(@produto) do |f| %>
  <% if @produto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@produto.errors.count, "error") %> Impedindo que este produto seja salvo:</h2>

      <ul>
      <% @produto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :nome, label: "Nome"%>

  <%= f.text_area :descricao, label: "Descrição" %>

  <%= f.number_field :price, label: "Preço", step: 2%>

  <%= f.submit "Salvar", class: "btn btn-primary btn-xs"%>

<% end %>
