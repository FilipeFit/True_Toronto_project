<div id="cart">
  <h1>Servi√ßos</h1>
  <%total = 0%>

  <table class="table table-hover table-bordered" id="cart">
    <thead>
      <th>Produto</th>
      <th>Valor</th>
    </thead>
      <tbody>
        <% @cart.each do |id, quantity|%>
        <% produto = Produto.find(id) %>
        <%total += produto.price%>
        <tr>
          <td><%=link_to produto.nome, produto%></td>
          <td><%=format_price(produto.price)%></td>
        </tr>
        <%end%>
      </tbody>
      <tfoot>
        <tr>
          <td>Total: <%=format_price(total)%></td>
          <td></td>
        </tr>
      </tfoot>
  </table>

  <%if @cart.empty?%>
    <p>Seu carrinho esta vazio</p>
  <%else%>
     <%= link_to "Limpar o carrinho", cart_clear_path%>
  <%end%>

</div>



